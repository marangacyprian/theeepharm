<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:orientation="vertical" android:clickable="false" android:background="#6A292727">
    <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/doctor"
            android:background="#00E7CFCF" android:cropToPadding="true" android:adjustViewBounds="true"  android:backgroundTint="#E8141810" android:backgroundTintMode="add" android:foreground="@drawable/doctor"
            android:foregroundTintMode="src_over" android:foregroundTint="#27444242"/>
    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:elevation="4dp"
            android:id="@+id/box" android:animateLayoutChanges="true"
            android:orientation="vertical"
            android:padding="30dp"
            android:background="@drawable/round_edge"
            android:layout_gravity="center" tools:layout_editor_absoluteY="189dp" tools:layout_editor_absoluteX="60dp">

        <EditText
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:id="@+id/userid"
                android:hint=" ENTER EMAIL"
                android:layout_gravity="center_horizontal"
                android:textSize="14sp"
                android:textColor="#FC000A0C"
                android:clickable="true"/>

        <EditText
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:id="@+id/password"
                android:layout_marginTop="50dp"
                android:hint=" ENTER PASSWORD"
                android:layout_gravity="center_horizontal"
                android:textSize="14sp"
                android:textColor="#FC000A0C"
                android:clickable="true"/>


        <Button
                android:text="login"
                android:fontFamily="sans-serif-condensed"
                android:layout_marginTop="100dp"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:id="@+id/login"
                android:textStyle="bold|italic"
                android:textSize="16sp" android:textAllCaps="true"
                android:textColor="#FAF9F9"
                android:background="#A8B4FA8D" android:clickable="true"
        />
        <Button
                android:text="New To PharmaHelp? SIGNUP"
                android:fontFamily="sans-serif-condensed"
                android:layout_marginTop="155dp"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:id="@+id/sign"
                android:textSize="14sp"
                android:background="#FDF7F5F5"
                android:textColor="#0D21CF"
                android:textStyle="normal" android:textAppearance="@style/TextAppearance.AppCompat.Body1"/>
    </FrameLayout>

</LinearLayout>